var c := 1;
while c = 1 do
begin
  var F:=1;
  var x := ReadlnInteger('Введите целое число.');  
  for var k := 1 to x do F := F * k;//Вычисляем факториал.
  Writeln('!', x, '=', F);    //Выводим на экран результат.
  Write('Для продолжения работы введите 1 для выхода - любую ');
  Writeln('цифру.');
  Read(c);
end; 

